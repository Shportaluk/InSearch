@{

    string title = @ViewBag.Title;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/js_index.js"></script>
    <script src='https://www.google.com/recaptcha/api.js'></script>
    <link href="~/Styles/index.css" rel="stylesheet" />
    <link rel="stylesheet" href="Styles/main_style.css" type="text/css" />
</head>
<body>
    <div id="header">
        <a href="index" id="InSearch">@Resources.Resource.Title</a>
        <div id="login_or_registretion">
            <button id="login" onclick="ShowFormLogin()">Login</button>
            <strong>or</strong>
            <button id="registration" onclick="ShowFormRegistration()">Registration</button>
    </div>
</div>

    <div id="layout">
        <div id="list_services_login">
            <a href="https://oauth.vk.com/authorize?client_id=5695105&display=page&redirect_uri=http://localhost:2798/vkAuth&scope=friends&response_type=code&v=5.59" >
                <img src="~/Styles/Images/Services/vk.png"/>
                <strong>VK</strong>
            </a>
            <a href="https://www.facebook.com/v2.8/dialog/oauth?client_id=973610479448616&redirect_uri=http://localhost:2798/fbAuth&scope=user_location,user_birthday" >
                <img src="~/Styles/Images/Services/fb.png" />
                <strong>FB</strong>
            </a>
            <a href="https://connect.ok.ru/oauth/authorize?client_id=1248646656&scope=VALUABLE_ACCESS,PHOTO_CONTENT&response_type=code&redirect_uri=http://localhost:2798/okAuth">
                <img src="~/Styles/Images/Services/ok.png" />
                <strong>OK</strong>
            </a>
            <a href="https://oauth.yandex.ru/authorize?response_type=code&client_id=910be0e9678342da8d16ba8233535ad5" >
                <img src="~/Styles/Images/Services/yandex.png" />
                <strong>Yandex</strong>
            </a>
            <a href="https://accounts.google.com/o/oauth2/auth?redirect_uri=http://localhost:2798/googleAuth&response_type=code&client_id=1095993003643-fj276hvktnvpmhs9fvo35m6ebpl511oc.apps.googleusercontent.com&scope=https%3A%2F%2Fwww.googleapis.com%2Fauth%2Fuserinfo.email+https%3A%2F%2Fwww.googleapis.com%2Fauth%2Fuserinfo.profile" >
                <img src="~/Styles/Images/Services/google.png" />
                <strong>Google</strong>
            </a>
        </div>
        
    </div>

    <form method="post" action="Login" id="form_login">
        <p>
            <strong>Login:</strong>
            <input type="text" name="login" id="txt_login" />
        </p>
        <p>
            <strong>Pass:</strong>
            <input type="password" name="pass" id="txt_pass" />
        </p>

        <div class="g-recaptcha" data-sitekey="6Lc-HAoUAAAAAHo5d5vr_irNjxCVColLLGcSpyh6"></div>

        <p id="error">
            @if (ViewBag.ErrorLogin != null)
            {
                <strong>@ViewBag.ErrorLogin</strong>
            }
        </p>
        <input type="submit" value="Login" />
        <button id="close" onclick="HideFormLogin()">Close</button>
    </form>
    <form method="post" action="Registration" id="form_registration" >
        <p>
            <strong>Login:</strong>
            <input type="text" name="login" id="txt_login" value="@ViewBag.Login" />
        </p>
        <p>
            <strong>Pass:</strong>
            <input type="password" name="pass" id="txt_pass" value="@ViewBag.Pass" />
        </p>
        <p>
            <strong>FirstName:</strong>
            <input type="text" name="firstName" id="txt_firstName" value="@ViewBag.FirstName" />
        </p>
        <p>
            <strong>LastName:</strong>
            <input type="text" name="lastName" id="txt_lastName" value="@ViewBag.LastName" />
        </p>
        <p>
            <strong>Sex:</strong>
            @if (ViewBag.Sex == "male")
            {
                <input type="radio" name="sex" value="male" checked><strong>Male</strong>
                <input type="radio" name="sex" value="female"><strong>Female</strong>
            }
            else
            {
                <input type="radio" name="sex" value="Male"><strong>Male</strong>
                <input type="radio" name="sex" value="Female" checked><strong>Female</strong>
            }
        </p>

        <div class="g-recaptcha" data-sitekey="6Lc-HAoUAAAAAHo5d5vr_irNjxCVColLLGcSpyh6"></div>

        <p id="error_registration">
            @if (ViewBag.ErrorRegistration != null)
            {
                <strong>@ViewBag.ErrorRegistration</strong>
            }
        </p>
        <input type="submit" value="Registration" />
        <button id="close" onclick="HideFormRegistration()">Close</button>
    </form>

</body>
</html>